<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- reference from http://withcoding.com/20 -->

    <!-- Clicked -->
    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/banana_green_dark"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/banana_green_dark"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>

    <!-- Normal State -->
    <item>
        <shape>
            <solid android:color="@color/banana_green"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>

</selector>